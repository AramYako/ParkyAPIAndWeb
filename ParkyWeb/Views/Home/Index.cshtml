@model ParkyWeb.Models.ViewModels.IndexVM


<div class="container">

    @foreach (var nationalPark in Model.NationalParks)
    {
        <div class="row pb-4 backgroundWhite">
            <div class="container backgroundWhite pb-4">
                <div class="card border">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-12 col-md-6">
                            <h1 class="text-warning">@nationalPark.Name</h1>
                        </div>
                        <div class="col-12 col-md-6 text-md-right">
                            <h1 class="text-warning">State : @nationalPark.State</h1>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="container rounded p-2">
                            <div class="row">
                                <div class="col-12 col-lg-8">
                                    <div class="row">
                                        <div class="col-12">
                                            <h3 style="color:#bbb9b9">Established: @nationalPark.Established.Year</h3>
                                        </div>


                                        @if (Model.Trails.Where(t => t.NationalPark.NationalParkId == nationalPark.NationalParkId).Count() > 0)
                                        {
                                            <div class="col-12">
                                                <table class="table table-striped" style="border:1px solid #808080 ">
                                                    <tr class="table-secondary">
                                                        <th>
                                                            Trail
                                                        </th>
                                                        <th>Distance</th>
                                                        <th>Elevation Gain</th>
                                                        <th>Difficulty</th>
                                                    </tr>

                                                    @foreach (var tr in Model.Trails.Where(t => t.NationalPark.NationalParkId == nationalPark.NationalParkId))
                                                    {
                                                        <tr>
                                                            <td>@tr.Name</td>
                                                            <td>@tr.Distance miles</td>
                                                            <td>@tr.Elevation ft</td>
                                                            <td>@tr.Difficulity</td>
                                                        </tr>
                                                    }
                                                </table>
                                            </div>
                                        }
                                        else
                                        {
                                            <p>No trails exists....</p>
                                        }
                                    </div>
                                </div>
                                <div class="col-12 col-lg-4 text-center">
                                    @if (nationalPark.Picture != null)
                                    {
                                        string base64 = Convert.ToBase64String(nationalPark.Picture);
                                        string imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                                        <img src="@imgSrc" style="width:100%;" />
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>