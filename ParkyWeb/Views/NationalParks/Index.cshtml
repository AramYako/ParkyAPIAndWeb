@model List<ParkyWeb.Models.ModelObjects.NationalPark>
@{
    ViewData["Title"] = "Index";
}

<h1>National park list</h1>
<div class="container">
    <div class="row">
        <div class="col-12 mb-3">
            <button  onclick="window.location.href ='NationalParks/Upsert'" type="button" class="btn btn-primary float-right"><i class="fas fa-folder-plus"></i> Add</button>
        </div>
    </div>
    <div style="background-color:#cde8e2" class="p-3 rounded">
        <table id="nationalDataTable" class="table table-bordered">
            <thead>
                <tr class="table-danger">
                    <th scope="col">Name</th>
                    <th scope="col">State</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var park in Model)
                {
                    <tr>
                        <td style="width:40%">@park.Name</td>
                        <td style="width:40%">@park.State</td>
                        <td style="width:15%">
                            <button onclick="window.location.href ='NationalParks/Upsert/@park.NationalParkId'" type="button" class="btn btn-primary float-right mr-2"><i class="fas fa-edit"></i></button>
                            <button onclick="Delete('NationalParks/Delete/@park.NationalParkId')" type="button" class="btn btn-danger float-right mr-2"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
     
   
</div>

@section Scripts{ 

<script src="~/js/Classes/NationalPark.js"></script>
}