@model ParkyWeb.Models.ModelObjects.NationalPark
@{
    var title = "";

    if (Model.NationalParkId != 0)
    {
        title = "Update National Park";
    }
    else
    {
        title = "Create National Park";
    }
}
<form method="post" asp-action="Upsert" enctype="multipart/form-data">

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.NationalParkId != 0)
        {
            <input type="hidden" asp-for="NationalParkId" />
        }
        <div class="col-12 p-3">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="State"></label>
                </div>
                <div class="col-8">
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Picture"></label>
                </div>
                <div class="col-8">
                    <input type="file" asp-for="Picture" id="projectImage" name="files" multiple class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Established"></label>
                </div>
                <div class="col-8">
                    @{
                        var dateEst = "";

                        if (Model.NationalParkId != 0)
                        {
                            dateEst = Model.Established.ToShortDateString();
                        }
                    }
                    <input id="nationalDatePicker" value="@dateEst" asp-for="Established" type="text" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-primary form-control">
                        @(Model.NationalParkId !=0 ? "Update": "Create")
                    </button>
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
        <div class="col-4 text-right" style="width:250px;">
            @if (Model.Picture != null)
            {
                string base64 = Convert.ToBase64String(Model.Picture);
                string imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                <img src="@imgSrc" style="width:100%;" />
            }
        </div>
    </div>

</form>

@section scripts{
    <script>
  $( function() {
      $("#nationalDatePicker" ).datepicker({
      changeMonth: true,
      changeYear: true
    });
  } );
    </script>
}